<h2><%= @title %></h2>
<%= link_to "new news type",  new_admin_news_type_path, class: "pull-right" %><br>

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th>title</th>
			<th># of articles</th>
      <th>&nbsp;</th>
		</tr>
	</thead>
	
	<% @news_types.each do |news_type| %>
		<tr>
			<td><%= link_to news_type.title, admin_news_type_path(news_type) %></td>
			<td><%= news_type.news_items.count %></td>
			<td class="delete">
        <% if news_type.news_items.count == 0   %>
          <%= link_to "#{fa_icon "trash"}".html_safe, admin_news_type_path(news_type), data:  { method: "delete", confirm:  "Are you sure you want to delete this?" } %>
          <% else %>
          <%= link_to("#{fa_icon "trash"}".html_safe, "#", :data => { :confirm => "Type must be empty to delete it" }) %>
        <% end %>
			</td>
		</tr>
	<% end %>
</table>
