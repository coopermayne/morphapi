<h2><%= @title %></h2>
<%= link_to "new file type",  new_admin_file_type_path, class: "pull-right add-new" %><br>

<table class="table table-striped table-hover table-condensed table-bordered index-table">
	<thead>
		<tr>
			<th>title</th>
			<th>rank</th>
			<th># of articles</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
		</tr>
	</thead>
	
	<% @file_types.each do |file_type| %>
		<tr>
			<td><%= link_to file_type.title, admin_file_type_path(file_type) %></td>
			<td><%= file_type.rank %></td>
			<td><%= file_type.uploads.count %></td>
			<td> <%= link_to fa_icon("pencil"), admin_file_type_path(file_type) %> </td>
			<td>
        <% if file_type.uploads.count == 0   %>
          <%= link_to "#{fa_icon "trash"}".html_safe, admin_file_type_path(file_type), data:  { method: "delete", confirm:  "Are you sure you want to delete this?" } %>
          <% else %>
          <%= link_to "#{fa_icon "trash"}".html_safe, "#", :data => { :confirm => "Type must be empty to delete it"} %>
        <% end %>
			</td>
		</tr>
	<% end %>
</table>
