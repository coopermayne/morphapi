<h2><%= @title %></h2>
<%= link_to "new credit",  new_admin_credit_path, class: "pull-right" %><br>

<table class="table table-striped table-hover table-condensed table-bordered index-table">
	<thead>
		<tr>
			<th>name</th>
			<th># of uploads</th>
      <th>&nbsp;</th>
		</tr>
	</thead>
	
	<% @credits.each do |credit| %>
		<tr>
			<td><%= link_to credit.name, admin_credit_path(credit) %></td>
			<td><%= credit.uploads.count %></td>
			<td class="delete">
        <% if credit.uploads.count == 0   %>
          <%= link_to "#{fa_icon "trash"}".html_safe, admin_credit_path(credit), data:  { method: "delete", confirm:  "Are you sure you want to delete this?" } %>
          <% else %>
          <%= link_to("#{fa_icon "trash"}".html_safe, "#", :data => { :confirm => "Type must be empty to delete it" }) %>
        <% end %>
			</td>
		</tr>
	<% end %>
</table>
