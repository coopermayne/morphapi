
<h2><%= @title %></h2>
<%= link_to 'New Position', new_admin_position_path, class: "pull-right" %>

<table class='table table-striped table-condensed table-bordered index-table'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Rank</th>
      <th>Roles</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @positions.sort_by{|pos| pos.rank}.each do |position| %>
      <tr>
        <td><%= position.title %></td>
        <td><%= position.rank %></td>
        <td><%= position.roles.count %></td>
				<td> <%= link_to fa_icon("pencil"), admin_position_path(position) %> </td>
				<td class="delete">
					<% if position.roles.count == 0   %>
						<%= link_to "#{fa_icon "trash"}".html_safe, admin_position_path(position), data:  { method: "delete", confirm:  "Are you sure you want to delete this?" } %>
					<% else %>
						<%= link_to("#{fa_icon "trash"}".html_safe, "#", :data => { :confirm => "Type must be empty to delete it" }) %>
					<% end %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>
