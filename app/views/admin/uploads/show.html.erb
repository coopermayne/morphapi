<h2><%= @title %></h2>

<%= simple_form_for @project, :url => admin_project_path(@project) do |f| %>

  <%= render :partial => 'admin/projects/form', :locals => { :f => f } %>
	
  <p class="submits">

  <% if @project.new_record? %>
    <%= link_to 'Cancel', admin_projects_path, :class => 'btn btn-mini btn-danger' %>
  <% else %>
    <%= link_to 'Cancel', admin_projects_path, :class => 'btn btn-mini btn-danger' %>
    <%= link_to fa_icon("trash", text: "Destroy"), admin_project_path(@project), method: :delete, class: 'btn btn-mini btn-danger pull-right', data: { confirm: "are you sure? it'll be gone forever" } %>
  <% end %>

  <%= f.submit "Save", :class => "btn btn-mini btn-primary" %>
  </p>

<% end %>
