<table class="table table-striped table-hover table-condensed table-bordered index-table">
	<thead>
		<tr>
      <th>title</th>
			<th>design (start)</th>
			<th>design (end)</th>
			<th>constr (start)</th>
			<th>constr (end)</th>
      <th>created</th>
      <th>pub</th>
      <th></th>
      <th></th>
		</tr>
	</thead>
	
	<% projects.each do |project| %>
		<tr>
          <td><%= link_to project.title, admin_project_path(project) %></td>
          <td><%= project.design_sdate %></td>
          <td><%= project.design_edate %></td>
          <td><%= project.constr_sdate %></td>
          <td><%= project.constr_edate %></td>
          <td><%= project.created_at.strftime("%m/%d/%Y") %></td>
          <td>
                <span class="sort_with_checkmark"><%= project.published.to_s %></span>
                <%= project.published ? fa_icon('check', class: 'pull-right', style: 'color:green') : fa_icon("close", class: "pull-right", style: "color: red") %>
          </td>
      <td><%= link_to "#{fa_icon "pencil"}".html_safe, admin_project_path(project) %></td>
      <td><%= link_to "#{fa_icon "trash"}".html_safe, admin_project_path(project), data:  { method: "delete", confirm:  "Are you sure you want to delete this?" } %></td>
		</tr>
	<% end %>
</table>
